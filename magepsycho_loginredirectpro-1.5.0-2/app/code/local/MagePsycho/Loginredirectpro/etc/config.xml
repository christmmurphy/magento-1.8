<config>
    <modules>
        <MagePsycho_Loginredirectpro>
            <version>1.5.0</version>
        </MagePsycho_Loginredirectpro>
    </modules>
    <global>
        <models>
            <magepsycho_loginredirectpro>
                <class>MagePsycho_Loginredirectpro_Model</class>
            </magepsycho_loginredirectpro>
			<customer>
				<rewrite>
					<customer>MagePsycho_Loginredirectpro_Model_Customer</customer>
				</rewrite>
			</customer>
        </models>
        <blocks>
            <magepsycho_loginredirectpro>
                <class>MagePsycho_Loginredirectpro_Block</class>
            </magepsycho_loginredirectpro>
        </blocks>
        <helpers>
            <magepsycho_loginredirectpro>
                <class>MagePsycho_Loginredirectpro_Helper</class>
            </magepsycho_loginredirectpro>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <magepsycho_loginredirectpro>
                    <file>magepsycho_loginredirectpro.xml</file>
                </magepsycho_loginredirectpro>
            </updates>
        </layout>
        <routers>
            <customer>
                <args>
                    <modules>
                        <magepsycho_loginredirectpro_customer before="Mage_Customer">MagePsycho_Loginredirectpro_Customer</magepsycho_loginredirectpro_customer>
                    </modules>
                </args>
            </customer>
            <newsletter>
                <args>
                    <modules>
                        <magepsycho_loginredirectpro_newsletter before="Mage_Newsletter">MagePsycho_Loginredirectpro_Newsletter</magepsycho_loginredirectpro_newsletter>
                    </modules>
                </args>
            </newsletter>
        </routers>
        <events>
            <controller_action_predispatch>
                <observers>
                    <magepsycho_loginredirectpro_controller_action_predispatch>
                        <type>singleton</type>
                        <class>magepsycho_loginredirectpro/observer</class>
                        <method>controllerActionPredispatch</method>
                    </magepsycho_loginredirectpro_controller_action_predispatch>
                </observers>
            </controller_action_predispatch>
        </events>
        <translate>
            <modules>
                <MagePsycho_Loginredirectpro>
                    <files>
                        <default>MagePsycho_Loginredirectpro.csv</default>
                    </files>
                </MagePsycho_Loginredirectpro>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <magepychoinfo>
                                            <title>MagePsycho Information</title>
                                        </magepychoinfo>
                                        <magepsycho_loginredirectpro>
                                            <title>Custom Login Redirect Pro</title>
                                        </magepsycho_loginredirectpro>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <MagePsycho_Loginredirectpro>
                    <files>
                        <default>MagePsycho_Loginredirectpro.csv</default>
                    </files>
                </MagePsycho_Loginredirectpro>
            </modules>
        </translate>
        <events>
            <controller_action_predispatch>
                <observers>
                    <magepsycho_loginredirectpro_controller_action_predispatch>
                        <type>singleton</type>
                        <class>magepsycho_loginredirectpro/observer</class>
                        <method>adminhtmlPreDispatchCheck</method>
                    </magepsycho_loginredirectpro_controller_action_predispatch>
                </observers>
            </controller_action_predispatch>
        </events>
    </adminhtml>
    <default>
        <magepsycho_loginredirectpro>
            <option>
                <active>0</active>
                <domain_type>1</domain_type>
				<enable_log>0</enable_log>
                <url_login>{{base_url}}customer/account</url_login>
                <url_logout>{{base_url}}</url_logout>
                <logout_custom_message>You have logged out and will be redirected to our homepage in %d seconds.</logout_custom_message>
                <logout_delay_time>5</logout_delay_time>
                <url_account>{{base_url}}customer/account</url_account>
                <success_message_account>Thank you for registering with %s.</success_message_account>
                <redirect_to_param>redirect_to</redirect_to_param>
            </option>
			<login_redirect>
				<url_login_1>{{base_url}}customer/account</url_login_1>
			</login_redirect>
			<logout_redirect>
				<url_logout_1>{{base_url}}</url_logout_1>
			</logout_redirect>
			<account_redirect>
				<url_account_1>{{base_url}}customer/account</url_account_1>
			</account_redirect>
            <account_success_message>
                <success_message_1>Thank you for registering with %s.</success_message_1>
            </account_success_message>
        </magepsycho_loginredirectpro>
    </default>
</config>